		    <script type="text/javascript">
		    $(document).ready(function() {
		    	//初始化声明一些变量
		    	var $example = $('#example');   //展示数据的表格
		    	var statusIndex = 4; 		//标识审核状态在哪一列
		    	var bussinessId = {};		//用于存储需要注销的商户的信息

		    	//插件的配置
		        $('#example').dataTable( {
		            "ajax": "/allreview",
		            'oLanguage': {
		  				'sLengthMenu': '每页显示 _MENU_ 条记录',
		  				'sZeroRecords': '抱歉， 没有找到',
		  				'sInfo': '从 _START_ 到 _END_ /共 _TOTAL_ 条数据',
		  				'sInfoEmpty': '没有数据',
		  				'sInfoFiltered': '(从 _MAX_ 条数据中检索)',
		  				"sSearch": "搜索",
		  				'oPaginate': {
		  				'sFirst': '首页',
		  				'sPrevious': '前一页',
		  				'sNext': '后一页',
		  				'sLast': '尾页',
		  				}
		  			},
		  		  "sZeroRecords": "没有检索到数据",
		            "columns": [
		               { "data": null, render: function ( data, type, row ) {
		               			return '<label><input type="checkbox" class="ace2" /><span class="lbl"></span></label>'
			                } 
			            },
			            {"data": "name"},
		                { "data": "license" },
		                { "data": "email" },
		                {"data": "id"},
		                { "data": "status" }
		            ]
		        }).on( 'click', 'input', function () {
		        	//处理点击表格的多选框选中事件
		        	var license = $(this).closest('tr').find('td').eq(2).text();
		        	var index = $(this).closest('tr').index();
		        	var bussinessData = {
		        		license: license,
		        		index: index
		        	}
		  	        if ($(this).prop('checked')) {
		  	        	bussinessId[license] = bussinessData;
		  	        } else {
		  	        	delete bussinessId[license];
		  	        }
		  	  	});
	  	  		// 点击出发表格全选事件
	  	  		$('#example th input:checkbox').on('click' , function(){
	  	  			var that = this;
	  	  			$(this).closest('table').find('tr > td:first-child input:checkbox')
	  	  			.each(function(){
	  	  				this.checked = that.checked;
	  	  			});
	  	  		});  	

	  	  		function changeBussinessStatus(index, newStatus) {
	  	  			var $status = $example.find('tr').eq(index + 1).find('td').eq(statusIndex);
	  	  			$status.text(newStatus);
	  	  		}
	  	  		function isEmptyObject(obj){
				    for(var n in obj){return false} 
				    return true; 
				}
	  	  		//注销一个或者多个商家
	  	  	  	$("#delete-confirm").on(ace.click_event, function() {
	  	  	  		var isEmpty = isEmptyObject(bussinessId);
	  	  	  		if (!isEmpty) {
		  	  			bootbox.confirm("确定注销所选商家?", function(result) {
		  	  				if(result) {
	  	  						for(id in bussinessId) {
	  	  							//传给后台的数据暂时只有商家的license
	  	  							data = {
	  	  								id: bussinessId[id].license
	  	  							}
	  	  							index = bussinessId[id].index;
	  	  							//此处为API接口
	  	  							url = '/' + id + '/delete'
	  	  							$.ajax({
	  	  								type: "POST",
	  	  								data: data,
	  	  								url: url,
	  	  								//后台返回给前端的数据应该只是一个标识，标明后台处理成功，而前端则应该动态将该商家的状态改成已注销
	  	  								success: function(data) {
	  	  									if (data === "success") {
	  	  										changeBussinessStatus(index, "已注销");
	  	  									}
	  	  								}
	  	  							})
	  	  						}
		  	  				}
		  	  			});
	  	  	  		} else {
	  	  	  			alert("请选择")
	  	  	  		}
	  	  		});
	  	  		$("#visits-statistics-confirm").on(ace.click_event, function() {
	  	  			bootbox.confirm("确定导出访问量统计?", function(result) {
	  	  				if(result) {
	  	  						
	  	  				}
	  	  			});
	  	  		});
	  	  		$("#user-statistics-confirm").on(ace.click_event, function() {
